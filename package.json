{
  "name": "conversation-testing-platform",
  "version": "0.1.0",
  "dependencies": {
    "@google/genai": "^0.14.0",
    "classnames": "^2.5.1",
    "eventemitter3": "^5.0.1",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-audio-visualize": "^1.2.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-scripts": "5.0.1",
    "sass": "^1.80.6",
    "web-vitals": "^2.1.4",
    "zustand": "^5.0.1"
  },
  "scripts": {
    "start-https": "HTTPS=true react-scripts start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "node scripts/coverage-report.js",
    "test:coverage:report": "jest --coverage && node scripts/coverage-report.js",
    "test:coverage:validate": "jest --coverage --passWithNoTests && node scripts/coverage-report.js",
    "test:ci": "jest --coverage --watchAll=false --ci --verbose",
    "test:debug": "jest --no-cache --debug --verbose",
    "test:unit": "jest --testPathPattern='src/.*\\.test\\.(ts|tsx)$'",
    "test:integration": "jest --testPathPattern='src/.*\\.integration\\.test\\.(ts|tsx)$'",
    "test:component": "jest --testPathPattern='src/components/.*\\.test\\.(ts|tsx)$'",
    "test:hooks": "jest --testPathPattern='src/hooks/.*\\.test\\.(ts|tsx)$'",
    "test:stores": "jest --testPathPattern='src/stores/.*\\.test\\.(ts|tsx)$'",
    "test:performance": "jest --testPathPattern='src/.*\\.perf\\.test\\.(ts|tsx)$'",
    "test:e2e": "jest --testPathPattern='src/.*\\.e2e\\.test\\.(ts|tsx)$'",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:component",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "bundle-analyzer": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.13",
    "@types/node": "^16.18.119",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/web": "^0.0.138",
    "fake-indexeddb": "^6.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webgl-canvas-mock": "^0.2.3",
    "msw": "^2.0.11",
    "resize-observer-polyfill": "^1.5.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "web-audio-test-api": "^0.5.2"
  },
  "overrides": {
    "typescript": "^5.6.3"
  }
}
